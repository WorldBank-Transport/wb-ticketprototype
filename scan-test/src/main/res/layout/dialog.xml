<?xml version="1.0" encoding="utf-8"?>
<trikita.obsqr.QrContentDialog xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:layout_gravity="center"
	android:layout_margin="24dp"
	android:visibility="invisible"
	android:padding="24dp"
	android:background="@drawable/dialog_full_holo_light"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:textSize="20sp"
			android:textColor="#df000000"
			/>
		<ScrollView
			android:id="@+id/scroll_content"
			android:layout_height="0dp"
			android:layout_width="match_parent"
			android:layout_weight="1"
			>
			<TextView
				android:id="@+id/tv_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				android:autoLink="all"
				android:textSize="14sp"
				android:textColor="#8a000000"
				/>
		</ScrollView>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<trikita.obsqr.MaterialButton
				android:id="@+id/btn_cancel"
				android:layout_width="wrap_content"
				android:layout_height="36dp"
				android:gravity="center"
				android:textColor="#8a000000"
				android:textSize="14sp"
				android:text="@string/dlg_alert_cancel_btn_caption"
				android:minWidth="88dp"
				android:textAllCaps="true"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				/>
			<trikita.obsqr.MaterialButton
				android:minWidth="88dp"
				android:id="@+id/btn_action"
				android:layout_width="wrap_content"
				android:layout_height="36dp"
				android:layout_alignParentRight="true"
				android:textSize="14sp"
				android:gravity="center"
				android:textAllCaps="true"
				android:textColor="#8a03a9f4"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				/>
		</RelativeLayout>
	</LinearLayout>
</trikita.obsqr.QrContentDialog>

